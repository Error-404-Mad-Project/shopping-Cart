<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shoppingcart">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".UpdateActivity"
            android:parentActivityName=".DeliveryActivityMain"
            android:theme="@style/Theme.MaterialComponents.Light.Bridge"/>

        <activity
            android:name=".FAQ"
            android:parentActivityName=".Payment"
            android:theme="@style/Theme.MaterialComponents.Light.Bridge" />
        <activity
            android:name=".ThankYou"
            android:parentActivityName=".Payment"
            android:theme="@style/Theme.MaterialComponents.Light.Bridge" />
        <activity
            android:name=".Terms"
            android:parentActivityName=".Instructions"
            android:theme="@style/Theme.MaterialComponents.Light.Bridge" />
        <activity
            android:name=".Payment"
            android:parentActivityName=".Instructions"
            android:theme="@style/Theme.MaterialComponents.Light.Bridge" />
        <activity
            android:name=".Instructions"
            android:parentActivityName=".UpdateActivity"
            android:theme="@style/Theme.MaterialComponents.Light.Bridge" />
        <activity android:name=".DeliveryActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>